@model EmprestimosModel

@{
    ViewData["title"] = "Editar Emprestimo";
}

<div class="container bg-dark p-5 rounded-3">
    <div class="mb-5 text-center">
        <h1 class="text-light">Editar Empréstimo</h1>
    </div>
    

    <form method="post" asp-controller="Emprestimo" asp-action="Editar">

        <input type="hidden" asp-for="Id"/>
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control text-light" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o livro" />
            <span asp-validation-for="Recebedor" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control text-light" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está fornecendo o livro" />
            <span asp-validation-for="Fornecedor" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Livro</label>
            <input type="text" class="form-control text-light" asp-for="LivroEmprestado" id="LivroEmprestado" placeholder="Nome do livro" />
            <span asp-validation-for="LivroEmprestado" class="text-danger"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Salvar</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>